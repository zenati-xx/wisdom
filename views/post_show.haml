.post
  %h2
    %a{:title => "#{@post.title}"} #{@post.title}
  .date
    #{@post.created_at.day} #{month(@post.created_at.month)} #{@post.created_at.year}
    %br
    
    -if auth
      %a{:title => 'Edit', :href => "/post/edit/#{@post.id}"}
        %img{:src => '/icons/bullet_yellow.png'}
      %a{:title => 'Delete', :href => "/post/delete/#{@post.id}"}
        %img{:src => '/icons/bullet_red.png'}
      -if @post.publish
        %a{:title => 'Visible', :href => "/post/unpublish/#{@post.id}"}
          %img{:src => '/icons/bullet_green.png'}
      -else
        %a{:title => 'Not visible', :href => "/post/publish/#{@post.id}"}
          %img{:src => '/icons/bullet_purple.png'}
        
  %p
    #{@post.content}

  .meta
    .tags
      %ul
        %li
          -@post.tags.each do |tag|
            %a{:href => "/tag/#{tag.content}"}
              #{tag.content}
    .permalink
      %a{:href => "#{@post.full_url}", :title => "Permalink"} Permalink
.hr
